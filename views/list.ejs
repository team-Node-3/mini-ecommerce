  function listing(id) {
        $.ajax({
          type: "GET",
          url: "/api/list",
          data: {},
          success: function (response) {
            let rows = response.data;
            console.log(rows)
            for (let i = 0; i < rows.length; i++) {
              let productId = rows[i]["productId"];
              let name = rows[i]["name"];
              let price = rows[i]["price"];
              let image = rows[i]["image"];
              let stock = rows[i]["stock"];
              let desc = rows[i]["desc"];

              let temp_html = `<div class="col">
                                    <div class="card shadow-sm">
                                      <img src=${image}>
                                      <div class="card-body">
                                        <p class="card-text">제품명: ${name}</p>
                                        <p class="card-text">- ${desc}</p>
                                        <p class="card-text">가격: ${price}</p>
                                        <p class="card-text">재고: ${stock}</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                          <div class="btn-group">
                                              <button type="button" class="btn btn-sm btn-outline-secondary" onclick="addorder(${productId})">장바구니 담기</button>
                                          </div>
                                          
                                        </div>
                                      </div>
                                    </div>
                                  </div>`
              $("#card-box").append(temp_html);
            };
          },
          error: function (error) {
            alert("목록 불러오기에 실패하였습니다.");
          },
        });
      }

  function addorder(productId, amount) {
    $.ajax({
      type: "PUT",
      url: `/api/${productId}/orders`,
      data: {
        amount
      },
      error: function(xhr, status, error) {
        if (status == 400) {
          alert("존재하지 않는 상품입니다.");
        }
        window.location.href = "/";
      },
      success: function(response) {
        if (response["result"] == "success") {
          $("#cartModal").modal("show");
        }
      }
    });
  }
</script>

